<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true" />


    <SeekBar
        android:id="@+id/sb_zoomin_duration_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/target"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_zoomin_duration_ratio"
        android:layout_alignTop="@id/sb_zoomin_duration_ratio"
        android:text="@string/DratioZi" />

    <TextView
        android:id="@+id/tv_zoomin_d_ration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sb_zoomin_duration_ratio"
        android:layout_alignTop="@id/sb_zoomin_duration_ratio"
        android:text="value" />

    <SeekBar
        android:id="@+id/sb_zoomin_scale_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sb_zoomin_duration_ratio"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_zoomin_scale_ratio"
        android:layout_alignTop="@id/sb_zoomin_scale_ratio"
        android:text="@string/SratioZi" />
    <TextView
        android:id="@+id/tv_zoomin_s_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sb_zoomin_scale_ratio"
        android:layout_alignTop="@id/sb_zoomin_scale_ratio"
        android:text="value" />

    <SeekBar
        android:id="@+id/sb_zoomout_scale_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sb_zoomin_scale_ratio"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_zoomout_scale_ratio"
        android:layout_alignTop="@id/sb_zoomout_scale_ratio"
        android:text="@string/SrZout" />
    <TextView
        android:id="@+id/tv_zoomout_scale_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sb_zoomout_scale_ratio"
        android:layout_alignTop="@id/sb_zoomout_scale_ratio"
        android:text="value" />



    <SeekBar
        android:id="@+id/sb_total_duration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sb_zoomout_scale_ratio"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_total_duration"
        android:layout_alignTop="@id/sb_total_duration"
        android:text="@string/Dtotal" />
    <TextView
        android:id="@+id/tv_total_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sb_total_duration"
        android:layout_alignTop="@id/sb_total_duration"
        android:text="value" />




    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="play"/>




</RelativeLayout>

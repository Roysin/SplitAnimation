<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_zoomin_duration_ratio"
        android:layout_alignTop="@id/sb_zoomin_duration_ratio"
        android:text="DratioZi" />
    <SeekBar
        android:id="@+id/sb_zoomin_duration_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/target"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_zoomin_scale_ratio"
        android:layout_alignTop="@id/sb_zoomin_scale_ratio"
        android:text="SratioZi" />
    <SeekBar
        android:id="@+id/sb_zoomin_scale_ratio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sb_zoomin_duration_ratio"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sb_total_duration"
        android:layout_alignTop="@id/sb_total_duration"
        android:text="Dtotal" />
    <SeekBar
        android:id="@+id/sb_total_duration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sb_zoomin_scale_ratio"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="play"/>




</RelativeLayout>
